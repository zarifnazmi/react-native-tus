{
    "ci": true,
    "git": {
        "commitMessage": "chore: release ${version}",
        "tagName": "v${version}",
        "push": true
    },
    "npm": {
        "publish": true
    },
    "github": {
        "release": true,
        "releaseName": "v${version}"
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "angular"
            }
        }
    }
}